
@model DataDeal.Models.M_JiangliUser
@{
    ViewBag.Title = "信息编辑"+Model.UserName;
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@{ 
    var gender = Model.Gender == 1 ? "男" : "女";
    var age = Model.birthday;
}
<!--修改和查看个人信息-->
<div class="personinfo">
    <div class="panel panel-info">
        <div class="panel panel-heading">
            <div style="float:left">
                @if (Model.Avatar_url != null)
                {
                    <img src="@Model.Avatar_url" height="100" />
                }
                else
                {
                    <img src="~/img/Homeimg/0.jpg" height="100" />
                }
            </div>
            <h3>个人基本信息</h3>
            <h4>微信昵称:@Model.nickName</h4>
            <div>
                <a class="btn btn-primary pull-right" href="/home/person?userid=@Model.Id">返回个人主页</a>
            </div>
            <div style="clear:both"></div>
        </div>
        @using (Html.BeginForm("personinfo", "home", FormMethod.Post, new { }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="panel panel-body">
                <table>
                    <tr style="height:50px">
                        <td style="width:100px;text-align:right">讲理昵称:</td>
                        <td style="width:400px;"><input type="text" class="form-control" readonly="readonly" value="@Model.UserName" id="UserName"/></td>
                        <td style="width:100px;text-align:right">年龄：</td>
                        <td style="width:400px;"><input type="text" class="form-control" readonly="readonly" value="@age"/></td>
                    </tr>
                    <tr style="height:50px">
                        <td style="width:100px;text-align:right">居住地:</td>
                        <td style="width:400px;">
                            @Html.TextBoxFor(t=>t.address,new { @class= "form-control", Value = Model.address })
                        </td>
                        <td style="width:100px;text-align:right">电话：</td>
                        <td style="width:400px;">
                            @Html.TextBoxFor(t => t.PhoneNumber, new { @class = "form-control", Value = Model.PhoneNumber })
                        </td>
                    </tr>
                    <tr style="height:50px">
                        <td style="width:100px;text-align:right">性别:</td>
                        <td style="width:400px;"><input type="text" class="form-control" value="@gender" id="Gender" readonly="readonly"/></td>
                        <td style="width:100px;text-align:right">职业：</td>
                        <td style="width:400px;">
                            @Html.TextBoxFor(t => t.profession, new { @class = "form-control", Value = Model.profession })
                        </td>
                    </tr>
                    <tr style="height:50px">
                        <td style="width:100px;text-align:right">生日:</td>
                        <td style="width:400px;">
                            @Html.TextBoxFor(t => t.birthday, new { @class = "form-control", Value = Model.birthday })
                        </td>
                        <td style="width:100px;text-align:right">qq：</td>
                        <td style="width:400px;">
                            @Html.TextBoxFor(t => t.qq, new { @class = "form-control", Value = Model.qq })
                        </td>
                    </tr>
                    <tr style="height:50px">
                        <td style="width:100px;text-align:right">血型:</td>
                        <td style="width:400px;">
                            @Html.TextBoxFor(t => t.BloodType, new { @class = "form-control", Value = Model.BloodType })
                        </td>
                        <td style="width:100px;text-align:right">邮箱:</td>
                        <td style="width:400px;">
                            @Html.TextBoxFor(t => t.Email, new { @class = "form-control", Value = Model.Email })
                        </td>
                    </tr>
                    <tr style="height:50px">
                        <td style="width:100px;text-align:right">自我简介:</td>
                        <td style="width:400px;" colspan="2">
                            @Html.TextBoxFor(t => t.SelfIntroduction, new { @class = "form-control", Value = Model.SelfIntroduction })
                        </td>
                    </tr>
                    <tr style="height:50px">
                        <td style="width:100px;text-align:right">兴趣爱好:</td>
                        <td style="width:400px;" colspan="2">
                            @Html.TextBoxFor(t => t.Hobby, new { @class = "form-control", Value = Model.Hobby })
                        </td>
                    </tr>
                    <!--只能查看不能修改的信息-->
                    <tr style="height:50px">
                        <td style="width:100px;text-align:right">权重:</td>
                        <td style="width:400px;"><input type="text" class="form-control" readonly="readonly" value="@Model.Weight" /></td>
                        <td style="width:100px;text-align:right">参与案件数量：</td>
                        <td style="width:400px;"><input type="text" class="form-control" readonly="readonly" value="@Model.NumberOfCase" /></td>
                    </tr>
                    <tr style="height:50px">
                        <td style="width:100px;text-align:right">注册日期:</td>
                        <td style="width:400px;"><input type="text" class="form-control" readonly="readonly" value="@Model.RegisterDate.ToString("yyyy-MM-dd")" /></td>
                        <td style="width:100px;text-align:right">最后登录日期：</td>
                        <td style="width:400px;"><input type="text" class="form-control" readonly="readonly" value="@Model.DateOfLast.ToString("yyyy/MM/dd")" /></td>
                    </tr>
                    <!--信息的保存和提交-->
                    <tr style="height:50px">
                        <td colspan="3"></td>
                        <td style="width:400px;text-align:right">
                            <input type="submit" class="btn btn-primary" value="保存" />
                            <a class="btn btn-default" href="/home/person?userid=@Model.Id">取消</a>
                        </td>
                    </tr>
                </table>
            </div>
        }
    </div>
</div>

